rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        getUserData().role == 'department' || 
        getUserData().role == 'admin'
      );
      allow create: if request.auth != null && getUserData().role == 'user';
      allow update: if request.auth != null && (
        getUserData().role == 'department' || 
        getUserData().role == 'admin'
      );
    }

    // Report Updates (Timeline)
    match /report_updates/{updateId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (
        getUserData().role == 'department' || 
        getUserData().role == 'admin'
      );
    }

    // Departments (Read-only for users, full access for admin)
    match /departments/{deptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && getUserData().role == 'admin';
    }
  }
}
